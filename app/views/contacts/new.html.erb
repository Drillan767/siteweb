<%= simple_form_for (@contact), :html => {:class => "form-horizontal"} do |f| %>
  <fieldset>

    <div class="form-group">
      <%= f.label :nom, { class: 'col-md-4 control-label' }%>
      <div class="col-md-4">
        <%= f.text_field :nom, :autofocus => true, class: 'form-control input-md' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, { class: 'col-md-4 control-label' }%>
      <div class="col-md-4">
        <%= f.text_field :email, { class: 'form-control input-md'} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :objet, { class: 'col-md-4 control-label' }%>
      <div class="col-md-4">
        <%= f.text_field :objet, { class: 'form-control input-md'} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :message, { class: 'col-md-4 control-label' }%>
      <div class="col-md-4">
        <%= f.text_area :message, { class: 'form-control input-md'} %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-4 col-md-offset-4">
        <%= f.submit 'Envoyer', { class: 'btn btn-danger'} %>
      </div>
    </div>

  </fieldset>
<%end %>

